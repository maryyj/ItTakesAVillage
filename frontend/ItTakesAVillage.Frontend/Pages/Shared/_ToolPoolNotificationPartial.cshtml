@model ItTakesAVillage.Models.ToolPool
@using ItTakesAVillage.Frontend
<p class="fw-bold">
    @Resources.CreatedDate@Resources.QuestionMark
    <span class="fw-light"> @Model.DateTime.ToString("g")</span>
</p>
<p class="fw-bold">
    @Resources.Tool@Resources.QuestionMark
    <span class="fw-light"> @Model.Name</span>
</p>
@if (Model.Description != null)
{
    <p class="fw-bold">
        @Resources.DescriptionText@Resources.QuestionMark
        <span class="fw-light"> @Model.Description</span>
    </p>
}
@if (@Model.Message != null)
{
    <p class="fw-bold">
        @Resources.Message@Resources.ColonSign
        <span class="fw-light"> @Model.Message</span>
    </p>
}
